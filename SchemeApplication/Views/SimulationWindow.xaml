<Window x:Class="SchemeApplication.Views.SimulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchemeApplication.Views"
        xmlns:vm="clr-namespace:SchemeApplication.ViewModels"
        xmlns:cf="clr-namespace:SchemeApplication.ViewModels.CanvasFigures"
        xmlns:conv="clr-namespace:SchemeApplication.Infrastructure.Converters"
        xmlns:rul="clr-namespace:SchemeApplication.Infrastructure.ValidationRules"
        mc:Ignorable="d"
        Title="SimulationWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance vm:SimulationWindowViewModel}">

    <Window.Resources>
        <conv:BlockValueConverter x:Key="BlockValueConverter"/>
        <rul:BlockValueValidationRule x:Key="BlockValueValidationRule"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="Inputs">
            <ItemsControl ItemsSource="{Binding InputBlocks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="cf:InputBlockFigureViewModel">
                        <WrapPanel>
                            <TextBlock Text="{Binding Name}"/>
                            <TextBox Text="{Binding InputValue, Converter={StaticResource BlockValueConverter}}"/>
                        </WrapPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Outputs">
            <ItemsControl ItemsSource="{Binding SimulateResults}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="vm:SimulateResult">
                        <WrapPanel Background="WhiteSmoke" Margin="10,5,10,5">
                                <Border BorderBrush="#545557" BorderThickness="1">
                                    <TextBlock FontSize="20" Text="{Binding Name}"/>
                                </Border>
                                <Border BorderBrush="#545557" BorderThickness="1" Margin="3,0,0,0">
                                    <TextBlock FontSize="20" Text="{Binding Value, Converter={StaticResource BlockValueConverter}}"/>
                                </Border>
                        </WrapPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </GroupBox>
        <WrapPanel Grid.Column="0" Grid.ColumnSpan="2" 
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="20">
            
            <Button Content="Simulate" Command="{Binding Path=SimulateCommand}"/>
        </WrapPanel>
    </Grid>
</Window>
