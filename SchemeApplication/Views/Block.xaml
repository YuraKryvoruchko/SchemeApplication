<UserControl x:Class="SchemeApplication.Views.Block"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchemeApplication.Views"
             xmlns:vm="clr-namespace:SchemeApplication.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="120">
    <UserControl.DataContext>
        <vm:BlockViewModel/>
    </UserControl.DataContext>
    <Grid Background="#545557">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Center" >
            <Ellipse Width="3" Height="3" Fill="#000000"/>
            <Ellipse Width="3" Height="3" Fill="#000000"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Image Source="/Resources/Images/null_image.png"  Width="auto" Height="53" Margin="1" VerticalAlignment="Top"/>
            <TextBlock Width="auto" Height="10" Text="{Binding Path=Name}" FontSize="8" Margin="0" TextAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <Ellipse Width="3" Height="3" Fill="#000000" Grid.Column="2"/>
        </StackPanel>
    </Grid>
</UserControl>
