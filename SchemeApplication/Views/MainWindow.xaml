<Window x:Class="SchemeApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchemeApplication"
        xmlns:vm="clr-namespace:SchemeApplication.ViewModels"
        xmlns:vmf="clr-namespace:SchemeApplication.ViewModels.CanvasFigures"
        xmlns:controls="clr-namespace:SchemeApplication.Views.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid Background="#d8dee9">
        <Border BorderBrush="#545557" BorderThickness="2">
            <Grid Background="#4b4c4e" Width="150" HorizontalAlignment="Left">
                <Border BorderBrush="#545557" BorderThickness="2" HorizontalAlignment="Right"/>
                <ListView Background="#4b4c4e" Width="150" HorizontalAlignment="Left" 
                  ItemsSource="{Binding Path=ListBlocks}" SelectedItem="{Binding Path=SelectedListBlock}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="22"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding ImagePath}" Width="22" Grid.Column="0"/>
                                <TextBlock Text="{Binding Name}" Width="auto" Margin="5" Foreground="#b1b2b3" Grid.Column="1"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#ffffff"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Border>
        <Border BorderBrush="#545557" BorderThickness="2">
            <Grid Background="#4b4c4e" Width="150" HorizontalAlignment="Right">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="5,0,0,5" Grid.Column="0">
                        <TextBlock Text="Inputs:" Foreground="#b1b2b3"/>
                        <TextBlock Text="Outputs:" Foreground="#b1b2b3"/>
                    </StackPanel>
                    <StackPanel Margin="5,0,5,5" Grid.Column="1">
                        <TextBox Text="{Binding Inputs, Mode=TwoWay, FallbackValue=0}"/>
                        <TextBox Text="{Binding Outputs, Mode=TwoWay, FallbackValue=0}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        <Border BorderBrush="#545557" BorderThickness="2">
            <controls:ItemsCanvas x:Name="ItemsCanvas" Margin="150,0,150,0" ItemsSource="{Binding CanvasObjects}">
                <controls:ItemsCanvas.Resources>
                    <DataTemplate DataType="{x:Type vmf:BlockFigureViewModel}">
                        <Grid Background="#545557" Width="100" Height="65">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>
                            <ListView Grid.Column="0" VerticalAlignment="Stretch" 
                                      ItemsSource="{Binding Inputs}"
                                      SelectedItem="{Binding SelectedConnection}"
                                      IsHitTestVisible="True">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="6" Height="6" Fill="#000000" 
                                                 Loaded="Ellipse_Loaded"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <StackPanel Grid.Column="1">
                                <Image Source="{Binding ImagePath}" Stretch="Fill" Width="auto" Height="53" Margin="1" VerticalAlignment="Top"/>
                                <TextBlock Width="auto" Height="10" Text="{Binding Name}" FontSize="8" Margin="0" TextAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <Ellipse Width="3" Height="3" Fill="#000000" Grid.Column="2"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vmf:LineFigureViewModel}">
                        <Line Stroke="Black" StrokeThickness="3" 
                              X1="{Binding OutputConnection.Position.X}" 
                              Y1="{Binding OutputConnection.Position.Y}" 
                              X2="{Binding InputConnection.Position.X}" 
                              Y2="{Binding InputConnection.Position.Y}"/>
                    </DataTemplate>
                </controls:ItemsCanvas.Resources>
                <controls:ItemsCanvas.ItemContainerStyle>
                    <Style TargetType="controls:DraggableContentControl">
                        <Setter Property="Position" Value="{Binding Position, Mode=TwoWay}"/>
                        <Setter Property="IsDraggable" Value="{Binding IsDraggable}"/>
                    </Style>
                </controls:ItemsCanvas.ItemContainerStyle>
                <controls:ItemsCanvas.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas x:Name="Canvas" Background="#ffffff" ClipToBounds="True"
                                MouseLeftButtonDown="Canvas_MouseLeftButtonDown"/>
                    </ItemsPanelTemplate>
                </controls:ItemsCanvas.ItemsPanel>
            </controls:ItemsCanvas>
        </Border>
    </Grid>
</Window>
