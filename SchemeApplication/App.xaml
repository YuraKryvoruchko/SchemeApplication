<Application x:Class="SchemeApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SchemeApplication"
             xmlns:conv="clr-namespace:SchemeApplication.Infrastructure.Converters"
             Startup="Application_Startup">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Languages\Language-en-EN.xaml"/>
                <ResourceDictionary Source="Resources\Languages\Language-ua-UA.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:ResourceKeyToValueConverter x:Key="ResKeyToValue"/>
        </ResourceDictionary>
      </Application.Resources>
</Application>
